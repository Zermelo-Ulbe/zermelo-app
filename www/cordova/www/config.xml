<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "nl.zermelo.online.App"
		version   = "1.4.0"
		android-versionCode="20161026"
		ios-CFBundleVersion="20161026">
		<name>Zermelo</name>
		<description>Toont het schoolrooster en mededelingen van de school.</description>
		<author>Zermelo Software B.V.</author>
		<preference name="phonegap-version" value="cli-6.3.0" />
		
		<access origin="https://*.zportal.nl/*" />
		<allow-intent href="https://*.zportal.nl/*" />
		<access origin="*" />
		<allow-intent href="*" />

        <plugin name="cordova-plugin-whitelist" spec="~1" source="npm"/>
        <plugin name="cordova-plugin-statusbar" spec="~1" source="npm"/>
        <plugin name="cordova-plugin-splashscreen" spec="~4" source="npm"/>

		<preference name="orientation" value="portrait" />
		<preference name="autorotate" value="false" readonly="true"/> <!-- Lock screen rotation on Android -->
		<preference name="fullscreen" value="false" />

		<preference name="webviewbounce" value="false" />
		<preference name="prerendered-icon" value="false" />
		<preference name="stay-in-webview" value="true" />
		<preference name="ios-statusbarstyle" value="black-opaque" />
		<preference name="detect-data-types" value="true" />
		<preference name="exit-on-suspend" value="false" />
		<preference name="EnableViewportScale" value="true" />
		<preference name="MediaPlaybackRequiresUserAction" value="false" />
		<preference name="AllowInlineMediaPlayback" value="false" />
		<preference name="TopActivityIndicator" value="gray" />
		<preference name="KeyboardDisplayRequiresUserAction" value="false" />
		<preference name="HideKeyboardFormAccessoryBar" value="false" />
		<preference name="SuppressesIncrementalRendering" value="false" />
		<preference name="android-installLocation" value="internalOnly" />
		<preference name="ErrorUrl" value=""/>
		<preference name="BackgroundColor" value="0xFFFFFFFF"/> <!-- F0F0F0 would be the real color but it's darkened by the loading dialog -->
		<preference name="KeepRunning" value="true"/>
		<preference name="DisallowOverscroll" value="true"/>
		<preference name="LoadUrlTimeoutValue" value="20000" />
		<preference name="disable-cursor" value="false" />
		<preference name="StatusBarOverlaysWebView" value="false" />

		<preference name="ShowSplashScreen" value="true" />
		<preference name="SplashScreenDelay" value="10000"/>
		<preference name="FadeSplashScreen" value="false"/>
		<preference name="ShowSplashScreenSpinner" value="false"/>

		<gap:platform name="winphone">
			<!-- <preference name="windows-appx-target" value="uap" /> -->
			<preference name="windows-appx-target" value="wp8" />
			<preference name="windows-identity-name" value="6D7654C9.ZermeloRooster" />
		</gap:platform>

		<platform name="android">
			<preference name="android-minSdkVersion" value="10" />
			<preference name="android-targetSdkVersion" value="19" />
			<splash src="resources/screens/screen-iphone-portrait-2x.png" platform="android" density="ldpi"/>
			<icon src="resources/icons/36.png" density="ldpi" />
	        <icon src="resources/icons/48.png" density="mdpi" />
	        <icon src="resources/icons/72.png" density="hdpi" />
	        <icon src="resources/icons/96.png" density="xhdpi" />
	        <icon src="resources/icons/144.png" density="xxhdpi" />
	        <icon src="resources/icons/192.png" density="xxxhdpi" />
		</platform>
		
		<platform name="ios">
		    <splash src="resources/screens/screen-iphone-portrait.png" width="320" height="480"/>
		    <splash src="resources/screens/screen-iphone-portrait-2x.png" width="640" height="960"/>
		    <splash src="resources/screens/screen-ipad-portrait" width="768" height="1024"/>
		    <splash src="resources/screens/screen-ipad-portrait-2x.png" width="1536" height="2048"/>
		    <splash src="resources/screens/screen-ipad-landscape.png" width="1024" height="768"/>
		    <splash src="resources/screens/screen-ipad-landscape-2x.png" width="2048" height="1536"/>
		    <splash src="resources/screens/screen-iphone-portrait-568h-2x.png" width="640" height="1136"/>
		    <splash src="resources/screens/screen-iphone-portrait-667h.png" width="750" height="1334"/>
		    <splash src="resources/screens/screen-iphone-portrait-736h.png" width="1242" height="2208"/>
		    <!-- <splash src="resources/screens/" width="2208" height="1242"/> -->

		    <icon src="resources/icons/29.png" width="29" height="29" />
			<icon src="resources/icons/40.png" width="40" height="40" />
			<icon src="resources/icons/50.png" width="50" height="50" />
			<icon src="resources/icons/57.png" width="57" height="57" />
			<icon src="resources/icons/58.png" width="58" height="58" />
			<icon src="resources/icons/72.png" width="72" height="72" />
			<icon src="resources/icons/76.png" width="76" height="76" />
			<icon src="resources/icons/80.png" width="80" height="80" />
			<icon src="resources/icons/100.png" width="100" height="100" />
			<icon src="resources/icons/114.png" width="114" height="114" />
			<icon src="resources/icons/120.png" width="120" height="120" />
			<icon src="resources/icons/144.png" width="144" height="144" />
			<icon src="resources/icons/152.png" width="152" height="152" />
		</platform>

		<splash src="splash.png" />
		<icon src="icon.png" />
	</widget>
